-# in app/views/movies/show.html.haml

%h2 Form info for #{@client.name}

%ul#details
  %li
    Date of Birth:
    = @client.dob
  %li
    Phone Number:
    = @client.phone
  %li
    Preferred Language:
    = @client.language
  %li
    Medical Facility:
    = @client.facility
  %li
    Cancer Care Provider:
    = @client.provider
  %li
    BCEF Service Area:
    = @client.area
  %li
    Active Treatment:
    = @client.active_treatment
  %li
    Income:
    = @client.income
  %li
    Contact Provider before client?:
    = @client.need_additional_info
  %li
    Partner Name:
    = @client.partner_name
  %li
    Partner Phone:
    = @client.partner_phone
  %li
    Partner Email:
    = @client.partner_email
  %li
    Partner Agency:
    = @client.partner_agency
  %li
    Date Completed:
    =  @movie.completed_date.strftime("%B %d, %Y")

%h3 Addition Info:

%p#description= @movie.additional_info

= link_to 'Back to client list', client_path
