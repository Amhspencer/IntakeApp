-#views/staff/new.html.hahl
%div{:class => 'container master-container'}
  %h1 Create new staff account
  %div{:class => 'row'}
    %div{:class => 'col-md-9'}

      = form_tag staff_path do

        %div{:class => 'form_group'}
          = label :staff, :name, "Name", :class => 'control-label'
          = text_field :staff, :name, :class => 'form-control'

        %div{:class => 'form_group'}
          = label :staff, :email, "Email", :class => 'control-label'
          = text_field :staff, :email, :class => 'form-control'

        %div{:class => 'form_group'}
          = label :staff, :password, "Password", :class => 'control-label'
          = password_field :staff, :password, :class => 'form-control'

        %div{:class => 'form_group'}
          = label :staff, :phone_number, "Phone Number", :class => 'control-label'
          = text_field :staff, :phone_number, :class => 'form-control'

        %div{:class => 'form_group'}
          = label :staff, :work_email, "Work Email", :class => 'control-label'
          = text_field :staff, :work_email, :class => 'form-control'

        <br />
        %div{:class => 'form_group'}
          = submit_tag "Create new staff", :class => 'btn btn-primary'

-# Not doing anything at the moment
  - if @staff.errors.any?
    #error_explanation
      %h2
        = pluralize(@staff.errors.count, "error")
        "prohibited this user from being saved:"
      %ul 
        - @staff.errors.full_messages.each do |msg|
          %li= msg